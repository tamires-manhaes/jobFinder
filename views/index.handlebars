<div id="top-container" class="container-fluid">
  <h1 id="main-title" class="text-center">Encontre o emprego dos seus sonhos</h1>
  <p id="main-subtitle" class="text-center">Plataforma com vagas de tecnologia, direcionadas a home office</p>

  <form id="search-form" class="form-inline" action="/" method="GET">
    <div class="form-group col-md-10">
      <input type="text" class="form-control" name="job" id="job" placeholder="Digite a vaga para busca">
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
  </form>
</div>

  <main>
    <div id="jobs-container" class="container">
      <div class="row">
        <div class="col-md-12">
          {{#if search}}
            <h2 id="job-list-title">Buscando vagas que cont√©m: {{search}}</h2>
          {{else}}
            <h2 id="job-list-title">Veja as vagas em destaque</h2>
          {{/if}}
          <ul id="job-list" class="list-group">
            {{#each jobs}}
              <li class="list-group-item {{#if dataValues.new_job}}new-job{{/if}}">
                <p style="display: none;">{{dataValues.id}}</p>
                <p>{{dataValues.company}}</p>
                <h2>{{dataValues.title}}</h2>
                <p>R${{dataValues.salary}}</p>
                {{#if dataValues.new_job}}<span class="new-job-label">Nova</span>{{/if}}
                <a href="/jobs/view/{{dataValues.id}}" class="btn btn-primary">Ver vaga</a>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </main>
